    <script type="text/javascript">
        var num = $("#num");

        $(function() {

            num = $("#num");

            num.on('click', function() {
                limpiar();

            });

            $("#mou").on('click', function() {
                if ((160 < num.val()) || 20 > num.val()) {
                    alert("Valor entre 20 i 160");
                } else {
                    var URL = "http://192.168.1.80/POS=" + num.val();
                    $.get(URL);

                }
                limpiar();

            })

            $("#baixa").on('click', function() {
                num.val(num.val() + 1);

            })

        });

        function limpiar() {
            num.val("");

        }
    </script>
